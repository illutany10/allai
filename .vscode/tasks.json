{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Django Server",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "runserver",
                "0.0.0.0:8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Django Server Only",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "manage.py",
                "runserver",
                "0.0.0.0:8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Next.js Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--hostname",
                "0.0.0.0"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Full Stack Development",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Django Server",
                "Start Next.js Dev Server"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
